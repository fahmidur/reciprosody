<%= content_for :javascript_includes do%>
<% end %>

<div class='row-fluid'>

	<div class='span6'>
		<h3 class='publication_name'>
			<%= render :partial => 'shared/icon.publication' %>
			<%= @pub.name %> 
			<% if @pub.pubdate && @pub.pubdate.year != 0 %>
				<span class='badge'>
					<%= @pub.pubdate.year %>
				</span>
			<% end %>
		</h3>
	</div>

	<div class='span6'>

		<ul class="nav nav-pills">
			<li class='pull-right <%= "active" if tab=="details"%> '>
				<a href="<%=publication_path(@pub)%>">Details</a>
			</li>

			<li class='pull-right <%= "active" if tab=="corpora"%> '>
				<a href="<%=corpora_publication_path(@pub)%>">Corpora</a>
			</li>
			<li class='pull-right <%= "active" if tab=="tools"%> '>
				<a href="<%=tools_publication_path(@pub)%>">Tools</a>
			</li>
			
			<% if @pub.canEdit?(current_user) %>
			<li class='pull-right <%= "active" if tab=="members"%> '>
				<a href="<%=manage_members_publication_path(@pub)%>">Manage Members</a>
			</li>
			
			<% end %>
		</ul>

	</div>

</div>

<%= render :partial => 'shared/topnav_select_active', :locals => {:select => 'pubs'} %>