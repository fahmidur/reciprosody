<%= content_for :javascript_includes do%>
	<%= javascript_include_tag 'tabs.js' %>
<% end %>

<ul class="nav nav-tabs">
	<li class='corpus_name'><%= @pub.name %></li>

	<li class='pull-right <%= "active" if tab=="details"%> '>
		<a href="<%=publication_path(@pub)%>">Details</a>
	</li>

	
	<li class='pull-right <%= "active" if tab=="members"%> '>
		<a href="<%=manage_members_publication_path(@pub)%>">Manage Members</a>
	</li>

	<% if @pub.owners.include?(current_user()) %>
		<li class='pull-right <%= "active" if tab=="corpora"%> '>
			<a href="<%=manage_corpora_publication_path(@pub)%>">Manage Corpora</a>
		</li>
	<% end %>

</ul>
