<% content_for :javascript_includes do %>
	<%= javascript_include_tag "resource_index.js" %>
<% end %>
<h1 class='resourceIndexHeader'>Publications</h1>

<% unless user_signed_in? %>
	<div class='alert alert-info'>
		<button type="button" class="close" data-dismiss="alert">Ã—</button>
		<h5>Please <a href='/users/sign_in'>Sign-in</a> or <a href='/users/sign_up'>Register</a> to upload and edit your own Publications.</h5>
	</div>
<% end %>

<div class='indexTop'>
	<%= paginate @pubs %>
	<br/>
</div>

<% @pubs.each do |p| %>
	<%= render(
			:partial => 'shared/publication_index1.html.erb',
			:locals => {:p => p} 
		)
	%>
<% end %>

<div class='indexBottom'>
	<%= paginate @pubs %>
	<br/>
</div>

<% if user_signed_in? %>
	<br>
	<div class='row-fluid'>
		<a class='btn span12' href='/publications/new'>New Publication</a>
	</div>
<% end %>

<%= render :partial => 'shared/topnav_select_active', :locals => {:select => 'pubs'} %>



