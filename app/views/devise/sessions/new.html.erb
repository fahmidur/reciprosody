<h2>Sign In</h2>
<br/>
<div class='row-fluid'>
  <% if flash[:error] || flash[:notice] || flash[:alert] %>
  	<div class='alert alert-error'>
  		<button type="button" class="close" data-dismiss="alert">Ã—</button>
  		<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
  		<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
  		<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
  	</div>
  <% end %>
</div>


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class='row-fluid'>
    <%= f.label :email, :class => 'span2' %>
    <%= f.email_field :email, :class => 'span3' %>
  </div>

  <div class='row-fluid'>
    <%= f.label :password, :class => 'span2' %>
    <%= f.password_field :password, :class => 'span3' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class='row-fluid'>
      <span class='span2'>
      </span>
    </div>

    <div class='row-fluid'>
      <label class='checkbox span2'>
        <%= f.check_box :remember_me %> Remember Me
      </label>

    </div>
  <% end -%>

  <div class='row-fluid'>
    <%= f.submit "Sign in", :class => 'btn btn-primary span5' %>
  </div>
<% end %>


<div class='row-fluid'>

  <%= render "devise/shared/links" %>

</div>
