
<div class='container-fluid'>
	<div class='row-fluid'>


		<div class='span5' id='single-page-box'>
			<div class='center'>
				<h2>Sign up</h2>
			</div>
			<hr/>
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

					<%= devise_error_messages! %>
				
				<div class='row-fluid'>
					<%= f.label :name, :class => 'span3 gray-label' %>
					<%= f.text_field :name, :class => 'span9' %>
				</div>
				
				<div class='row-fluid'>
					<%= f.label :email, :class => 'span3 gray-label' %>
					<%= f.email_field :email, :class => 'span9' %>
				</div>

				<div class='row-fluid'>
					<%= f.label :password, :class => 'span3 gray-label' %>
					<%= f.password_field :password, :class => 'span9' %>
				</div>

				<div class='row-fluid'>
					<%= f.label :password_confirmation, 'Password', :class => 'span3 gray-label' %>
					<%= f.password_field :password_confirmation, :class => 'span9' %>
				</div>
				<br/>
				<div class='row-fluid'>
					<button class='btn btn-primary span12' type='submit' style='float:right; border-radius: 0px;'>
						Join
						<i class='fa fa-fw fa-arrow-circle-right'></i>
					</button>
				</div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
