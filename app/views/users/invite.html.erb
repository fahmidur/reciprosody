<%= form_tag('/user/invite_user', :method => 'post') do %>

<% if notice %>
	<div class='alert alert-error'>
		<button type="button" class="close" data-dismiss="alert">Ã—</button>
		<%= notice %>
	</div>
<%end%>
<div class='row-fluid'>
	<div class='field span4'>
		<label for='name'>Name</label>
		<input type='text' class='cap' name='name' title='Reminder' data-content="They can change their names later.">
	</div>
</div>

<div class='row-fluid'>
	<div class='field span4'>
		<label for='email'>Email</label>
		<input type='text' name='email' title='Reminder' data-content="You can't invite someone already registered.">
	</div>
</div>
	
<div class='row-fluid'>
	<div class='field span4'>
		<input type='submit' value="Invite Friend" class='btn'/>
	</div>
</div>

<script type='text/javascript'>
	$(function() {
		$('input').popover({trigger:'focus', placement: 'right'});
	});
</script>
<% end %>
