<%= form_tag('/user/invite_user', :method => 'post') do %>

<% if notice %>
	<div class='alert alert-error'>
		<button type="button" class="close" data-dismiss="alert">Ã—</button>
		<%= notice %>
	</div>
<%end%>

<div class='row-fluid'>
	<div class='span4'>
		<h1>
			<i class='fa fa-fw fa-ticket'></i>
			Invite A Friend
		</h1>
		<div class='row-fluid'>
			<label for='name'>Name</label>
			<input id='name' type='text' class='cap span12' name='name' title='Reminder' data-content="They can change their names later." required/>
		</div>

		<div class='row-fluid'>
				<label for='email'>Email</label>
				<input id='email' type='email' class='span12' name='email' title='Reminder' data-content="You can't invite someone already registered." required/>
		</div>
			
		<div class='row-fluid'>
			<div class='field span12'>
				<input type='submit' value="Invite Friend" class='btn'/>
			</div>
		</div>

	</div> <!-- end of first column -->
	<div class='span8'>
		
	</div>
</div>

<script type='text/javascript'>
	$(function() {
		$('input').popover({trigger:'focus', placement: 'right'});
	});
</script>
<% end %>
