<p id="notice"><%= notice %></p>

<!--<span class='corpus_header'><%= @corpus.name %><span class='corpus_icon pull-right'></span></span>-->

<ul class="nav nav-tabs">
	<li class='corpus_name'><%= @corpus.name %></li>
	<li class='pull-right active'><a href="#details">Details</a></li>
	
	<% if @corpus.owners.include?(current_user())%>
		<li class='pull-right'><a href="<%=manage_members_corpus_path(@corpus)%>">Manage Members</a></li>
	<% end %>

</ul>

<br/>

<div class='tab-content'>
	<div class='tab-pane active' id='details'>
	
		<div class='row-fluid'>
			<div class='box span12'>
				<span class='corpus_show_name'>Language</span> 
				<span class='corpus_show_value'><%= @corpus.language %></span>
	
				<span class='pull-right'>
					<span class='corpus_show_name'>Duration</span>
					<span class='corpus_show_value'><%= @corpus.human_duration %></span>
				</span>
			</div>
		</div>

		<div class='row-fluid'>
			<div class='box span4'>
				<span class='corpus_show_name'>Speaker Description:</span>
				<span class='corpus_show_value'><%= @corpus.speaker_desc %></span>
			</div>
			<div class='box span4'>
				<span class='corpus_show_name'>Number of Speakers:</span>
				<span class='corpus_show_value'><%= @corpus.num_speakers %></span>
			</div>
	
			<div class='box span4'>
				<span class='corpus_show_name'>Genre:</span>
				<span class='corpus_show_value'><%= @corpus.genre %></span>
			</div>
		</div>

		<div class='row-fluid'>
			<div class='box span4'>
				<span class='corpus_show_name'>Annotation:</span>
				<span class='corpus_show_value'><%= @corpus.annotation %></span>
			</div>
	
			<div class='box span4'>
				<span class='corpus_show_name'>License:</span>
				<span class='corpus_show_value'><%= @corpus.license %></span>
			</div>
	
			<div class='box span4'>
				<span class='corpus_show_name'>UUID</span>
				<span class='corpus_show_value'><%= @corpus.utoken %> </span>
			</div>
	
		</div>

		<div class='row-fluid'>
			<div class='box span4'>
				<h5>Description</h5>
				<%= @corpus.description %>
			</div>
			<div class='box span4'>
				<h5>Citation</h5>
				<%= @corpus.citation %>
			</div>
	
			<div class='box span4 row-fluid'>
				<%= form_tag("/corpora/#{@corpus.id}/download", :method => :get) do%>
					<%= select_tag(:name, options_for_select(@archives), :class=>'span4') %>
					<input type='submit' class='btn btn-primary cdownload span8' value="Download">
				<% end %>
			</div>
		</div>
		
		<div class='row-fluid'>
			<div class='box span4'>
				<h5 id='owners_hd'><%= pluralize(@corpus.owners.size, 'Owner', 'Owners') %></h5>

					<% @corpus.owners.each do |owner| %>
							<div class='member'>
								<span class='member_name'><%= owner.name %></span>
								<span class='member_email pull-right'><a href="mailto:<%= owner.email%>" class='btn btn-mini' target='_BLANK'><i class='icon-envelope'></i>&nbsp;<%= owner.email %></a></span>
							</div>
					<% end %>

			</div>
			
			<div class='box span4'>
				<h5 id='approvers_hd'><%= pluralize(@corpus.approvers.size, 'Approver', 'Approvers') %> </h5>
			</div>
			
			<div class='box span4'>
				<h5 id='members_hd'><%= pluralize(@corpus.members.size, 'Member', 'Members') %> </h5>
			</div>
			
		</div>
		
		
	</div> <!--End of Details -->
		
	
</div> <!--End of Tab Content-->

<br/>
<%= link_to 'Edit', edit_corpus_path(@corpus), :class => 'btn' %> &nbsp;
<%= link_to 'Back', 'javascript:history.go(-1)', :class => 'btn' %> &nbsp;
<%= link_to 'All Corpora', corpora_path, :class => 'btn' %>


