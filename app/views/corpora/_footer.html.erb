<div class='row-fluid'>
	<div class='span12'>
		<%= render :partial => 'shared/btns/back' %>

		<%= render :partial => 'shared/btns/list', :locals => {
			:href => corpora_path,
			:text => 'All Corpora'
		}%>

		<% if @corpus.canEdit?(current_user()) %>
			<%= render :partial => 'shared/btns/edit', :locals => {
				:href => edit_corpus_path(@corpus)
			}%>

			<a href="#delete-confirm-corp-<%=@corpus.id%>" data-id="<%= @corpus.id %>" class="delete-confirm btn btn-danger pull-right" data-toggle="modal">
				<i class='icon-trash'></i>&nbsp;
				Delete
			</a>
			<div class="modal fade" id="delete-confirm-corp-<%= @corpus.id %>" style="display:none">
				<div class="modal-header">
					<a class="close" data-dismiss="modal">Ã—</a>
					<h3>Are you sure?</h3>
				</div>
				<div class="modal-body">
					<p>Just checking.</p>
				</div>
				<div class="modal-footer">
					<%= link_to 'Destroy', '/corpora/'+ @corpus.id.to_s, :method => :delete, :class => 'btn' %>
					<a href="#" data-dismiss="modal" class="btn">Cancel</a>
				</div>
			</div>
		<% end %>
	</div>
</div>