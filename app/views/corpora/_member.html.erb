<div class='row-fluid memberListItem' id='memberListItem-<%=mem.id%>'>
	<div class='span5'>
		<%= render :partial => 'shared/btns/compose', :locals => {:user => mem.user } %>
		<a class='member_name' href='<%= user_path(mem) %>'>
			<i class='fa fa-fw fa-user'></i>
			<%= mem.user.name%>
		</a>


		<!-- <span class='member_email'>
			<a href="mailto:<%= mem.user.email%>" class='btn btn-mini' target='_BLANK'>
			<i class='fa fa-fw fa-envelope'></i>
			<%= mem.user.email %></a>
		</span> -->
	</div>

	<div class="span5 input-prepend">
		<span class="add-on"><i class="icon-list"></i></span>
		<%= select_tag "member_role_id-"+mem.id.to_s, options_for_select(Membership.roles.map {|m| [m.capitalize, m] }, mem.role), :class => 'mem_role', 'data-id' => mem.id, 'data-cid' => @corpus.id %>
	</div>

	<div class='span2 btn-group hButton'>
		<a href="#delete-confirm" data-id="<%= mem.id %>" data-name="<%= mem.user.name %>" data-cid="<%= @corpus.id %>" class="delete-confirm btn" data-toggle="modal"><i class='icon-remove'></i></a>
	</div>
  
</div>
